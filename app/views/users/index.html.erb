<br/>
<div class="card">
<div class="card-header">
<h1>Users</h1>
    
  </div>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Emergency Contact</th>
      <th>User Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.emergencycontact %></td>
        <td><%= user.usertype %></td>
        <td><%= link_to 'Show',user,class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<br/>
<%= link_to 'New Employee', new_user_path,class:"btn btn-primary" %>